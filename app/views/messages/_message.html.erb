<div class="card">
  <div class="card-block">
    <div class="row">
      <div class="col-md-2">
        <%= message.user.email %>
      </div>
      <div class="col-md-10">
        <p class="card-text">
          <%= message.body %>
          <span class="text-muted"><%= time_ago_in_words(message.created_at) %> says</span><br>
        </p>
      </div>
    </div>
  </div>
</div>
